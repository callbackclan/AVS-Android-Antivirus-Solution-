<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary">
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/boostProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:indicatorColor="@color/yellow"
        app:indicatorSize="200dp"
        app:trackColor="@color/lightIndigo"
        app:trackThickness="5dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/boostProgressBar"
        android:layout_alignBottom="@+id/boostProgressBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="98%"
        android:textColor="@color/white"
        android:id="@+id/percentage"
        android:textSize="60sp" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percentage"
        android:text="@string/scanning_in_progress"
        android:id="@+id/info_tv"
        android:textColor="@color/white"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/file"
        android:layout_below="@+id/info_tv"
        android:textColor="@color/white"
        android:gravity="center_horizontal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button_yellow"
        android:text="@string/stop_scanning" />
</RelativeLayout>
