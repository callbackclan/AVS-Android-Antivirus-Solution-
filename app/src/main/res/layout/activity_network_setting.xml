<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".NetworkSetting">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchToggleNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Disable Network Blocker"
        android:textColor="@color/scanBtnBackground"
        android:textOff="OFF"
        android:checked="true"
        android:textOn="ON"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumb="@drawable/sw_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:track="@drawable/sw_track"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/networkBlockerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_on_background_disabled"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchToggleNetwork"
        app:layout_constraintVertical_bias="0.031"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>